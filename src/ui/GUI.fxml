    <center>
        <AnchorPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <ImageView fitHeight="340.0" fitWidth="406.0" layoutX="7.0" layoutY="17.0" preserveRatio="true">
                    <image>
                        <Image url="@../../imgs/inventory.png"/>
                    </image>
                </ImageView>
                <GridPane fx:id="basicInventoryGP" layoutX="21.0" layoutY="186.0" prefHeight="110.0" prefWidth="330.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
